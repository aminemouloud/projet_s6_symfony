{% extends 'base.html.twig'  %}

{% block body  %}

    {% if not  app.user %}


<h1> connexion de l'utilisateur</h1>
    {% if error %}
        {{  dump(error) }}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}



    <form action="{{ path('security_connexion') }}" method="post" >
          <div class ="form-group">
               <input placeholder="idUtilisateur" required name = "_username"
    type="text" class = "form-control">
    </div>

    <div class ="form-group">
    <input placeholder="Mot de passe" required name = "_password"
           type="password" class = "form-control">
    </div>

    <div class ="form-group">
    <button type="submit" class="btn btn-success">Connexion </button>
    </div>

</form>

    {% else %}

        <a href="{{ path('security_deconnexion') }}" >Deconnexion</a>



    {% endif %}


{% endblock %}